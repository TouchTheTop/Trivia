/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.btn_s button {
  margin-top: 15px;
}

.weui-flex {
  padding: 20px;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-transition: 0.3s;
  transition: 0.3s;
}

.js_category {
  margin: 10px 0;
  background-color: #fff;
  overflow: hidden;
  border-radius: 2px;
  cursor: pointer;
}

.info_top{
  font-size: 12px;
  color: #555;
  padding: 0px 8px;
}

.nav_box{
  overflow: auto;
  padding: 15px;
}

.nav_box .nav_box_item{
  font-size: 14px;
  padding:6px 0px;
  width: 30.33%;
  margin:0px 5px;
  text-align: center;
  background: #eee;
  display: inline-block;
  border-radius: 12rpx;
  margin-bottom: 10px;
}

.nav_box_item.all{
  color:#005aff;

}

.nav_title{
  font-size: 20px;
  padding-left: 20px;
}

.title{

  display: block;
}

.nav_title .row_btn{
  font-size: 14px;
  color:#005aff;
  margin-top:8px;
  display: inline-block;
}

.nav_title .row{
width: 16px;
height: 16px;
vertical-align: middle;
display: inline-block;
}

.login_bar button{
  font-size: 14px;
  text-align: right;
  color: #005aff;
  background: transparent;
  border: 0px;
  box-shadow: 0px;
}

.login_bar{
    font-size: 14px;
  text-align: right;
}

.login_bar image{
  width: 18px;
  vertical-align: sub;
  border-radius: 50%;
}

.bar_text{
  font-size:12px;
color:#888;

}